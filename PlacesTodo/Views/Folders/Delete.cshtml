@model PlacesTodo.Models.Folder

<div class="text-center">
    <h1 class="display-4">Create Folder</h1>
</div>

<div>
    Are you sure you want to delete: @Model.Name and all of its children?
</div>

<form asp-controller="Folders" asp-action="Delete">
    <input type="hidden" name="folderId" value="@Model.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-controller="Folders" asp-action="Index">No</a>
</form>