@model PlacesTodo.Models.Item

<form asp-action="Edit" style="block">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    Name:
    <input type="text" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    Description:
    <input type="text" asp-for="Description" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    Due date:
    <input type="date" asp-for="DueDate" value="@Model.DueDate" />
    <br />
    <input type="hidden" asp-for="ParentId" value="@Model.ParentId" />
    <input type="submit" value="Submit" />
</form>
<a href="@Url.Action("Index", "Folders")">Cancel</a>