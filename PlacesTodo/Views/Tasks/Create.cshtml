@model PlacesTodo.Models.Item

<div class="text-center">
    <h1 class="display-4">Create Task</h1>
</div>

<div>
    <p>Parent: @ViewBag.ParentName</p>
    <form asp-action="Create" style="block">
        Name:
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br />
        Description:
        <input type="text" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
        <br />
        Due Date:
        <input type="date" asp-for="DueDate" value="@DateTime.Now.Date"/>
        <br />
        <input type="hidden" asp-for="ParentId" value="@Model.ParentId" />
        <input type="submit" value="Create" />
    </form>
    <a href="@Url.Action("Index", "Folders")">Cancel</a>
</div>