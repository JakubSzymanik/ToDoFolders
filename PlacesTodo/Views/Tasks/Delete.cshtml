@model PlacesTodo.Models.Item

<div class="text-center">
    <h1 class="display-4">Delete Task</h1>
</div>

<div>
    Are you sure you want to delete: @Model.Name?
</div>

<form asp-controller="Tasks" asp-action="Delete">
    <input type="hidden" name="taskId" value="@Model.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-controller="Folders" asp-action="Index">No</a>
</form>